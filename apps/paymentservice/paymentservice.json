{
  "name": "paymentapp",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "$env[HTTPPORT]"
      },
      "handlers": [
        {
          "action": {
            "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
            "data": {
              "flowURI": "res://flow:expected_payment"
            },
            "mappings": {
              "input": [
                {
                  "mapTo": "invoiceid",
                  "type": "assign",
                  "value": "$.pathParams.invoiceId"
                }
              ],
              "output": [
                {
                  "mapTo": "data",
                  "type": "assign",
                  "value": "$.response"
                },
                {
                  "mapTo": "code",
                  "type": "literal",
                  "value": 200
                }
              ]
            }
          },
          "settings": {
            "method": "GET",
            "path": "/api/expected-date/:invoiceId"
          }
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:expected_payment",
      "data": {
        "name": "ExpectedPayment",
        "metadata": {
          "input": [
            {
              "name": "invoiceid",
              "type": "string"
            }
          ],
          "output": [
            {
              "name": "code",
              "type": "string"
            },
            {
              "name": "response",
              "type": "any"
            }
          ]
        },
        "tasks": [
          {
            "id": "randomnumber_2",
            "name": "Random Number",
            "description": "Creates a random number between min and max",
            "activity": {
              "ref": "github.com/retgits/flogo-components/activity/randomnumber",
              "input": {
                "min": "0",
                "max": "10"
              }
            }
          },
          {
            "id": "addtodate_3",
            "name": "Add to Date",
            "description": "Add a specified number of units to a date",
            "activity": {
              "ref": "github.com/retgits/flogo-components/activity/addtodate",
              "input": {
                "number": 0,
                "units": "",
                "date": ""
              },
              "mappings": {
                "input": [
                  {
                    "type": "assign",
                    "value": "$activity[randomnumber_2].result",
                    "mapTo": "number"
                  },
                  {
                    "type": "literal",
                    "value": "days",
                    "mapTo": "units"
                  }
                ]
              }
            }
          },
          {
            "id": "actreturn_4",
            "name": "Return",
            "description": "Simple Return Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/actreturn",
              "input": {
                "mappings": [
                  {
                    "mapTo": "response",
                    "type": "object",
                    "value": {
                      "id": "{{$flow.invoiceid}}",
                      "expectedDate": "{{$activity[addtodate_3].result}}"
                    }
                  }
                ]
              }
            }
          }
        ],
        "links": [
          {
            "from": "randomnumber_2",
            "to": "addtodate_3"
          },
          {
            "from": "addtodate_3",
            "to": "actreturn_4"
          }
        ]
      }
    }
  ]
}